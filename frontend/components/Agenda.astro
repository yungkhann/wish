---
const day1 = [
  { time: "9:00", title: "Registration" },
  { time: "10:00", title: "Opening Ceremony" },
  { time: "11:00", title: "Case Presentations by Companies + Q&A" },
  { time: "12:00", title: "Coding Begins" },
  { time: "14:00", title: "Coffee Break" },
];

const day2 = [
  { time: "12:00", title: "Case Submission Deadline" },
  { time: "13:00", title: "Pizza Break" },
  { time: "13:30", title: "Pitching Session" },
  { time: "18:30", title: "Closing Ceremony" },
];
---

<section id="schedule" class="bg-black py-20 text-white">
  <h2
    class="mb-20 text-center font-['Cinzel'] text-6xl font-bold tracking-widest uppercase"
  >
    Schedule
  </h2>

  <div
    class="mx-auto grid max-w-7xl grid-cols-1 gap-24 md:grid-cols-2 md:gap-12"
  >
    <div class="relative">
      <h3
        class="mb-16 text-center font-['Cinzel'] text-4xl font-bold text-white/90 uppercase"
      >
        March 14
      </h3>

      <div
        class="absolute top-24 bottom-0 left-1/2 w-[2px] -translate-x-1/2 bg-white/40"
        aria-hidden="true"
      >
      </div>

      <div class="flex flex-col gap-16">
        {
          day1.map((event, idx) => (
            <div class="relative grid grid-cols-[1fr_auto_1fr] items-center gap-4 md:gap-10">
              <div
                class:list={[
                  "text-right",
                  idx % 2 !== 0 && "invisible opacity-0 md:block",
                ]}
              >
                <p class="font-['Marcellus'] text-lg opacity-70">
                  {event.time}
                </p>
                <h4 class="mt-1 font-['Marcellus'] text-xl leading-tight md:text-2xl">
                  {event.title}
                </h4>
              </div>

              <div class="relative z-10 flex size-6 items-center justify-center">
                <div class="size-3 rounded-full bg-[#A855F7] shadow-[0_0_15px_#A855F7]" />
                <div class="absolute size-8 animate-pulse rounded-full bg-[#A855F7]/20 blur-md" />
              </div>

              <div
                class:list={[
                  "text-left",
                  idx % 2 === 0 && "invisible opacity-0 md:block",
                ]}
              >
                <p class="font-['Marcellus'] text-lg opacity-70">
                  {event.time}
                </p>
                <h4 class="mt-1 font-['Marcellus'] text-xl leading-tight md:text-2xl">
                  {event.title}
                </h4>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="relative">
      <h3
        class="mb-16 text-center font-['Cinzel'] text-4xl font-bold text-white/90 uppercase"
      >
        March 15
      </h3>

      <div
        class="absolute top-24 bottom-0 left-1/2 w-[2px] -translate-x-1/2 bg-white/40"
        aria-hidden="true"
      >
      </div>

      <div class="flex flex-col gap-16">
        {
          day2.map((event, idx) => (
            <div class="relative grid grid-cols-[1fr_auto_1fr] items-center gap-4 md:gap-10">
              <div
                class:list={[
                  "text-right",
                  idx % 2 !== 0 && "invisible opacity-0 md:block",
                ]}
              >
                <p class="font-['Marcellus'] text-lg opacity-70">
                  {event.time}
                </p>
                <h4 class="mt-1 font-['Marcellus'] text-xl leading-tight md:text-2xl">
                  {event.title}
                </h4>
              </div>

              <div class="relative z-10 flex size-6 items-center justify-center">
                <div class="size-3 rounded-full bg-[#A855F7] shadow-[0_0_15px_#A855F7]" />
                <div class="absolute size-8 animate-pulse rounded-full bg-[#A855F7]/20 blur-md" />
              </div>

              <div
                class:list={[
                  "text-left",
                  idx % 2 === 0 && "invisible opacity-0 md:block",
                ]}
              >
                <p class="font-['Marcellus'] text-lg opacity-70">
                  {event.time}
                </p>
                <h4 class="mt-1 font-['Marcellus'] text-xl leading-tight md:text-2xl">
                  {event.title}
                </h4>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
