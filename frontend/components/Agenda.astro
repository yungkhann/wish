---
const day1 = [
  { time: "9:00", title: "Registration" },
  { time: "10:00", title: "Opening Ceremony" },
  { time: "11:00", title: "Case Presentations by Companies + Q&A" },
  { time: "12:00", title: "Coding Begins" },
  { time: "14:00", title: "Coffee Break" },
];

const day2 = [
  { time: "12:00", title: "Case Submission Deadline" },
  { time: "13:00", title: "Pizza Break" },
  { time: "13:30", title: "Pitching Session" },
  { time: "18:30", title: "Closing Ceremony" },
];
---

<section id="schedule" class="bg-black py-12 text-white sm:py-20">
  <h2
    class="mb-10 text-center font-['Cinzel'] text-4xl font-bold tracking-widest uppercase sm:mb-14 sm:text-5xl lg:mb-20 lg:text-6xl"
  >
    Schedule
  </h2>

  <div
    class="mx-auto grid max-w-7xl grid-cols-1 gap-24 md:grid-cols-2 md:gap-12"
  >
    <div class="relative">
      <h3
        class="mb-10 text-center font-['Cinzel'] text-xl font-bold text-white/90 uppercase sm:mb-14 sm:text-2xl md:mb-16 md:text-4xl"
      >
        March 14
      </h3>

      <div
        class="absolute top-20 bottom-0 left-1/2 w-[2px] -translate-x-1/2 bg-white/40"
        aria-hidden="true"
      >
      </div>

      <div class="flex flex-col gap-8 sm:gap-12 md:gap-16">
        {
          day1.map((event, idx) => (
            <div class="relative grid grid-cols-[1fr_auto_1fr] items-center gap-4 md:gap-10">
              <div
                class:list={[
                  "text-right",
                  idx % 2 !== 0 && "invisible opacity-0 md:block",
                ]}
              >
                <p class="font-['Marcellus'] text-sm opacity-70 sm:text-base lg:text-lg">
                  {event.time}
                </p>
                <h4 class="mt-1 font-['Marcellus'] text-sm leading-tight sm:text-base lg:text-xl xl:text-2xl">
                  {event.title}
                </h4>
              </div>

              <div class="relative z-10 flex size-6 items-center justify-center">
                <div class="size-3 rounded-full bg-[#A855F7] shadow-[0_0_15px_#A855F7]" />
                <div class="absolute size-8 animate-pulse rounded-full bg-[#A855F7]/20 blur-md" />
              </div>

              <div
                class:list={[
                  "text-left",
                  idx % 2 === 0 && "invisible opacity-0 md:block",
                ]}
              >
                <p class="font-['Marcellus'] text-sm opacity-70 sm:text-base lg:text-lg">
                  {event.time}
                </p>
                <h4 class="mt-1 font-['Marcellus'] text-sm leading-tight sm:text-base lg:text-xl xl:text-2xl">
                  {event.title}
                </h4>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="relative">
      <h3
        class="mb-10 text-center font-['Cinzel'] text-xl font-bold text-white/90 uppercase sm:mb-14 sm:text-2xl md:mb-16 md:text-4xl"
      >
        March 15
      </h3>

      <div
        class="absolute top-20 bottom-0 left-1/2 w-[2px] -translate-x-1/2 bg-white/40"
        aria-hidden="true"
      >
      </div>

      <div class="flex flex-col gap-8 sm:gap-12 md:gap-16">
        {
          day2.map((event, idx) => (
            <div class="relative grid grid-cols-[1fr_auto_1fr] items-center gap-4 md:gap-10">
              <div
                class:list={[
                  "text-right",
                  idx % 2 !== 0 && "invisible opacity-0 md:block",
                ]}
              >
                <p class="font-['Marcellus'] text-sm opacity-70 sm:text-base lg:text-lg">
                  {event.time}
                </p>
                <h4 class="mt-1 font-['Marcellus'] text-sm leading-tight sm:text-base lg:text-xl xl:text-2xl">
                  {event.title}
                </h4>
              </div>

              <div class="relative z-10 flex size-6 items-center justify-center">
                <div class="size-3 rounded-full bg-[#A855F7] shadow-[0_0_15px_#A855F7]" />
                <div class="absolute size-8 animate-pulse rounded-full bg-[#A855F7]/20 blur-md" />
              </div>

              <div
                class:list={[
                  "text-left",
                  idx % 2 === 0 && "invisible opacity-0 md:block",
                ]}
              >
                <p class="font-['Marcellus'] text-sm opacity-70 sm:text-base lg:text-lg">
                  {event.time}
                </p>
                <h4 class="mt-1 font-['Marcellus'] text-sm leading-tight sm:text-base lg:text-xl xl:text-2xl">
                  {event.title}
                </h4>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <div class="mt-8 flex items-center justify-end gap-2">
    <div class="relative shrink-0" style="width: 24px; height: 40px;">
      <span class="font-['Marcellus'] text-4xl leading-none text-white">*</span>
    </div>
    <span class="font-['Marcellus'] text-sm font-normal lowercase text-white">
      There may be minor changes to the schedule
    </span>
  </div>
</section>
