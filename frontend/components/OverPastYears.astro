---
import { Image } from "astro:assets";
import stongs from "../assets/stongs.svg";

const statsItems = [
  { number: "1900+", label: "participants" },
  { number: "750+", label: "teams" },
  { number: "10+", label: "countries" },
];
---

<section class="px-6 py-12 sm:px-8 md:py-16 lg:px-12">
  <h1
    class="mb-8 text-center text-4xl font-bold sm:text-5xl md:mb-12 md:text-6xl"
  >
    Over the past years
  </h1>

  <div class="flex w-full flex-col gap-4 md:grid md:grid-cols-3 lg:gap-6">
    {
      statsItems.map((item) => (
        <div class="flex flex-col items-center justify-center border-2 border-red-800 bg-transparent px-8 py-12 md:px-12 md:py-16">
          <div class="mb-6 md:mb-8">
            <Image
              src={stongs}
              alt="Statistics icon"
              width="46"
              height="28"
              class="icon-white h-7 w-11.5"
            />
          </div>
          <p class="mb-3 text-5xl font-bold text-red-800 md:mb-4 md:text-6xl lg:text-7xl">
            {item.number}
          </p>
          <p class="text-2xl font-bold md:text-3xl lg:text-4xl">{item.label}</p>
        </div>
      ))
    }
  </div>
</section>
