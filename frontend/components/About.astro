---
import { Image } from "astro:assets";
import calendar from "../assets/calendar.svg";
import fairy from "../assets/fairy.svg";
import location from "../assets/location.svg";
import who from "../assets/who.svg";

const eventDetails = [
  {
    icon: calendar,
    alt: "Calendar",
    title: "When?",
    lines: ["March 14-15, 2026"],
  },
  {
    icon: location,
    alt: "Location",
    title: "Where?",
    lines: ["Nazarbayev University", "Astana, Kazakhstan"],
  },
  {
    icon: who,
    alt: "Who",
    title: "Who?",
    lines: ["Everyone older than 16"],
  },
];
---

<section
  id="about"
  class="relative w-full overflow-hidden px-6 py-20 text-white md:px-12 lg:px-24"
  style="min-height: 100svh;"
>
  <!-- Content grid -->
  <div
    class="relative z-10 mx-auto flex h-full w-full max-w-7xl flex-col items-center justify-center gap-10 md:flex-row md:items-center md:gap-12 lg:min-h-[80vh] lg:gap-20"
  >
    <!-- Text column -->
    <div class="w-full md:w-3/5 lg:w-1/2">
      <h2 class="sr-only">About WISH</h2>
      <p
        class="about-paragraph text-justify font-['Marcellus'] leading-snug tracking-wide"
      >
        <span class="text-[#B743FF]">Women in STEM Hackathon</span> is a 24-hour hackathon
        for girls and women, where participants form teams of <span
          class="text-[#B743FF]">2â€“4 people</span
        > and collaboratively work on real-world challenges provided by sponsors in
        the fields of data analytics, machine learning, and artificial intelligence.
        Participation is open to high school students, college students, and university
        students <span class="text-[#B743FF]">aged 16 and above.</span>
      </p>
    </div>

    <div class="flex w-full items-center justify-center md:w-2/5 lg:w-1/2">
      <div class="relative flex items-center justify-center">
        <div class="fairy-circle" style="position: relative; z-index: 1;">
          <div style="position: absolute; inset: 0; background: linear-gradient(180deg, rgba(119,22,208,0.4) 0%, rgba(0,0,0,0) 29%, rgba(119,22,208,0.3) 55%, rgba(0,0,0,0.05) 100%); border-radius: 9999px; filter: blur(60px); z-index: 0;"></div>
          <Image
            src={fairy}
            alt="WISH illustration"
            class="h-full w-full object-contain"
            style="position: relative; z-index: 1;"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Event details card -->
  <div
    class="relative z-10 mx-auto mt-16 max-w-7xl rounded-2xl border border-purple-500/40 p-6 md:mt-20 md:p-8"
    style="box-shadow: 0 0 20px rgba(119, 22, 208, 0.15), inset 0 0 30px rgba(119, 22, 208, 0.05);"
  >
    <div
      class="flex flex-col gap-8 md:flex-row md:items-center md:justify-between md:gap-16"
    >
      {
        eventDetails.map((detail) => (
          <div class="flex flex-row items-center gap-5">
            <Image
              src={detail.icon}
              alt={detail.alt}
              class="icon-purple shrink-0"
            />
            <div class="flex flex-col text-left">
              <h3 class="mb-1 font-['Marcellus'] text-2xl font-bold tracking-wide md:text-3xl">
                {detail.title}
              </h3>
              {detail.lines.map((line) => (
                <p class="font-['Marcellus'] text-lg text-white/80 md:text-xl">
                  {line}
                </p>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .about-paragraph {
    font-size: clamp(0.95rem, 1.6vw, 1.75rem);
    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    line-height: 1.7;
  }

  @media (hover: hover) {
    .about-paragraph:hover {
      text-shadow: 0px 4px 12px rgba(154, 68, 233, 0.5);
      transition: text-shadow 0.3s ease;
    }
  }

  /* Precise circle container for the fairy */
  .fairy-circle {
    width: clamp(160px, 30vw, 440px);
    height: clamp(160px, 30vw, 440px);
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    box-shadow:
      0 0 40px rgba(119, 22, 208, 0.4),
      0 0 80px rgba(119, 22, 208, 0.15);
    border: 1px solid rgba(183, 67, 255, 0.25);
    background: radial-gradient(
      circle at 50% 50%,
      rgba(119, 22, 208, 0.08) 0%,
      transparent 70%
    );
  }

  @media (max-width: 767px) {
    .fairy-circle {
      width: clamp(140px, 60vw, 260px);
      height: clamp(140px, 60vw, 260px);
    }
  }
</style>
