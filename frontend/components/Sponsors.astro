<section id="sponsors" class="py-12 md:py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2
      class="mb-16 text-center font-['Cinzel_Decorative'] text-3xl font-bold text-white sm:text-4xl md:text-5xl lg:text-6xl"
    >
      Our Sponsors
    </h2>

    <div class="flex flex-wrap items-center justify-center gap-12 md:gap-20">
      {/* Placeholder for Sponsor Logos */}
      {
        [1, 2, 3].map((i) => (
          <div class="flex h-32 w-64 items-center justify-center rounded-xl border border-white/10 bg-white/5 backdrop-blur-sm transition-all hover:border-purple-500/50 hover:bg-white/10 hover:shadow-[0_0_20px_rgba(168,85,247,0.2)]">
            <span class="font-['Marcellus'] text-xl text-white/50">
              Sponsor {i}
            </span>
          </div>
        ))
      }
    </div>

    <h2
      class="mt-24 mb-16 text-center font-['Cinzel_Decorative'] text-2xl font-bold text-white sm:text-3xl md:text-4xl"
    >
      Info Partners
    </h2>
    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-16">
      {
        [1, 2].map((i) => (
          <div class="flex h-24 w-48 items-center justify-center rounded-xl border border-white/10 bg-white/5 backdrop-blur-sm transition-all hover:bg-white/10">
            <span class="font-['Marcellus'] text-lg text-white/50">
              Partner {i}
            </span>
          </div>
        ))
      }
    </div>
  </div>
</section>
