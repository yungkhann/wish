{
  "name": "wish",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "concurrently \"bun:dev:*\"",
    "dev:frontend": "bun run --bun astro dev",
    "dev:backend": "wrangler dev",
    "build": "bun run --bun astro build",
    "lint:frontend": "eslint 'frontend/**/*.{js,ts,tsx,astro}'",
    "lint:backend": "eslint 'backend/**/*.{js,ts,tsx,astro}'",
    "lint": "concurrently \"bun:lint:*\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy:dry": "bun run build && wrangler deploy --dry-run",
    "deploy": "bun run install && bun run build && wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply wishDB --local",
    "db:migrate:prod": "wrangler d1 migrations apply wishDB --remote",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "drizzle-kit studio --config=drizzle.config.local.ts",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.17.1",
    "better-auth": "^1.4.18",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "swiper": "^12.1.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260130.0",
    "@types/bun": "^1.3.8",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.54.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^17.2.0",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript-eslint": "^8.54.0",
    "wrangler": "^4.61.1"
  }
}
